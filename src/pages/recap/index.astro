---
import { absoluteUrl } from '@/lib/utils';
import '@/styles/globals.css';

import RecapLayout from '@/layouts/recap-layout.astro';

const title = 'Recap | sui Tech Blog';
const description = 'Gateway to the past.';
const canonicalUrl = absoluteUrl('/recap');
---

<RecapLayout title={title} description={description} url={canonicalUrl}>
  <style slot='head'>
    .glitch-wrapper {
      position: relative;
      display: inline-block;
    }

    .glitch {
      font-size: clamp(4rem, 15vw, 8rem);
      font-weight: 900;
      line-height: 1;
      position: relative;
      color: #1a1a1a;
    }

    .glitch::before,
    .glitch::after {
      content: attr(data-text);
      position: absolute;
      top: 0;
      width: 100%;
      background: #ffffff;
      clip: rect(0, 0, 0, 0);
    }

    .glitch::before {
      left: -2px;
      text-shadow: 2px 0 #ff00c1;
      animation: glitch-anim-1 2s infinite linear alternate-reverse;
    }

    .glitch::after {
      left: 2px;
      text-shadow: -2px 0 #00fff9;
      animation: glitch-anim-2 3s infinite linear alternate-reverse;
    }

    @keyframes glitch-anim-1 {
      0% {
        clip: rect(20px, 9999px, 15px, 0);
      }
      20% {
        clip: rect(55px, 9999px, 33px, 0);
      }
      40% {
        clip: rect(10px, 9999px, 88px, 0);
      }
      60% {
        clip: rect(70px, 9999px, 2px, 0);
      }
      80% {
        clip: rect(40px, 9999px, 50px, 0);
      }
      100% {
        clip: rect(85px, 9999px, 10px, 0);
      }
    }

    @keyframes glitch-anim-2 {
      0% {
        clip: rect(65px, 9999px, 100px, 0);
      }
      20% {
        clip: rect(10px, 9999px, 5px, 0);
      }
      40% {
        clip: rect(80px, 9999px, 55px, 0);
      }
      60% {
        clip: rect(25px, 9999px, 30px, 0);
      }
      80% {
        clip: rect(5px, 9999px, 80px, 0);
      }
      100% {
        clip: rect(95px, 9999px, 65px, 0);
      }
    }

    .glow {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 80%;
      max-width: 600px;
      height: 80%;
      max-height: 600px;
      background: radial-gradient(
        circle,
        rgba(59, 130, 246, 0.1) 0%,
        rgba(0, 0, 0, 0) 70%
      );
      pointer-events: none;
      z-index: -1;
    }
  </style>

  <div
    class='flex h-screen w-full items-center justify-center flex-col gap-8 px-4'
  >
    <div class='glow'></div>

    <div class='text-center space-y-2 z-10 w-full max-w-md'>
      <p class='text-sm tracking-[0.5em] text-gray-500 uppercase'>Archive</p>

      <a
        href='/recap/2025'
        class='group relative block transition-transform hover:scale-105 duration-500 cursor-pointer'
      >
        <div class='glitch-wrapper'>
          <span class='glitch' data-text='2025'>2025</span>
        </div>
        <div
          class='absolute -bottom-4 left-0 w-full h-px bg-linear-to-r from-transparent via-gray-400 to-transparent scale-x-0 group-hover:scale-x-100 transition-transform duration-500'
        >
        </div>
      </a>
    </div>

    <div class='absolute bottom-8 text-center'>
      <a
        href='/'
        class='text-xs text-gray-500 hover:text-black transition-colors tracking-widest uppercase'
      >
        Back to Reality
      </a>
    </div>
  </div>
</RecapLayout>
