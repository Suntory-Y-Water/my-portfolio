---
import type { CollectionEntry } from 'astro:content';
import ShortsCard from './shorts-card.astro';

type Props = {
  shorts: (CollectionEntry<'shorts'> & { body?: string })[];
};

const { shorts } = Astro.props;
---

<section class='py-6'>
  <div class='mb-4 flex items-center justify-between px-4 container mx-auto'>
    <h2 class='text-xl font-bold flex items-center gap-2'>Shorts</h2>
    <a href='/shorts' class='text-sm text-muted-foreground hover:text-primary'>
      すべて見る
    </a>
  </div>

  <div
    class='flex gap-6 overflow-x-auto pb-8 pt-1 scrollbar-hide snap-x snap-mandatory'
  >
    {
      shorts.map((short) => (
        <div class='w-[280px] shrink-0 snap-start'>
          <ShortsCard short={short} />
        </div>
      ))
    }
  </div>
</section>
