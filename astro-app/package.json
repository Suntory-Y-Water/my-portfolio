    "mermaid": "^11.12.2",
    "rehype-pretty-code": "^0.14.1",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-github-blockquote-alert": "^2.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "satori": "^0.18.3",
    "shiki": "^3.20.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
