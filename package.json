{
  "name": "sui-tech-blog",
  "type": "module",
  "version": "2.0.0",
  "scripts": {
    "dev": "astro dev",
    "prebuild": "bun run scripts/generate-md-endpoints.ts",
    "build": "astro build",
    "postbuild": "pagefind --site dist",
    "start": "astro preview",
    "preview": "bun run build && bun run start",
    "astro": "astro",
    "deploy": "wrangler deploy --minify",
    "dev:cf": "wrangler dev",
    "dev:cf:remote": "wrangler dev --remote",
    "cf-typegen": "wrangler types",
    "format": "biome format --write . && prettier --write '**/*.astro'",
    "format:check": "biome format . && prettier --check '**/*.astro'",
    "prettier": "prettier --write '**/*.astro'",
    "prettier:check": "prettier --check '**/*.astro'",
    "lint": "biome lint .",
    "lint:ai": "set -o pipefail && biome lint . --reporter=github 2>&1 | { grep '^::' || true; }",
    "lint:fix": "biome lint --write .",
    "lint:unsafe-fix": "biome lint --write --unsafe .",
    "type-check": "astro check && tsc --noEmit",
    "type-check:ai": "astro check && tsc --noEmit --pretty false",
    "astro-check": "astro check",
    "lhci:healthcheck": "lhci healthcheck",
    "lhci:astro": "bun run build && lhci collect --config=lighthouserc.json",
    "lhci:assert": "lhci assert --config=lighthouserc.json",
    "lhci:upload": "lhci upload --config=lighthouserc.json",
    "lhci:open": "lhci open",
    "textlint": "cd contents/ && bun run lint && cd ..",
    "textlint:fix": "cd contents/ && bun run lint:fix && cd ..",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "check:tags": "bun run scripts/check-tags.ts",
    "check:svg-security": "bun run scripts/check-svg-security.ts",
    "check:svg-security:all": "bun run scripts/check-svg-security.ts --all",
    "check:url-blank-lines": "bun run scripts/detect-url-without-blank-lines.ts",
    "fix:url-blank-lines": "bun run scripts/fix-url-blank-lines.ts --apply",
    "new-blog": "bun run scripts/create-blog-template.ts",
    "update-blog-icon": "bun run scripts/update-blog-icon.ts",
    "ci": "biome ci .",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/partytown": "^2.1.4",
    "@astrojs/react": "^4.4.2",
    "@astrojs/sitemap": "^3.6.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "astro": "^5.16.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "dompurify": "^3.3.1",
    "gray-matter": "^4.0.3",
    "jsdom": "^27.3.0",
    "lucide-react": "^0.562.0",
    "rehype-pretty-code": "^0.14.1",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-breaks": "^4.0.0",
    "remark-github-blockquote-alert": "^2.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "tailwind-merge": "^3.4.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@biomejs/biome": "2.3.8",
    "@lhci/cli": "^0.15.1",
    "@resvg/resvg-js": "^2.6.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/bun": "^1.3.5",
    "@types/canvas-confetti": "^1.9.0",
    "@types/dompurify": "^3.2.0",
    "@types/hast": "^3.0.4",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.3",
    "husky": "^9.1.7",
    "pagefind": "^1.4.0",
    "playwright": "^1.57.0",
    "prettier": "^3.7.4",
    "prettier-plugin-astro": "^0.14.1",
    "rehype-mermaid": "^3.0.0",
    "satori": "^0.18.3",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typed-query-selector": "^2.12.0",
    "typescript": "^5.9.3",
    "unicode-emoji-json": "^0.8.0",
    "wrangler": "^4.54.0"
  }
}
