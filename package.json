  "devDependencies": {
    "@biomejs/biome": "^2.3.5",
    "@next/bundle-analyzer": "^16.0.3",
    "@types/bun": "^1.3.2",
    "@types/hast": "^3.0.4",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@types/web": "^0.0.294",
    "autoprefixer": "^10.4.22",
    "depcheck": "^1.4.7",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "rehype-pretty-code": "^0.14.1",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3"
  }
