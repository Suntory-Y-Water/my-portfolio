{
  "name": "sui-portfolio",
  "version": "0.1.0",
  "private": true,
  "author": "sui",
  "scripts": {
    "dev": "bun run --bun next dev",
    "build": "bun run --bun next build",
    "start": "next start",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "check:tags": "bun run scripts/check-tags.ts",
    "check:url-blank-lines": "bun run scripts/detect-url-without-blank-lines.ts",
    "fix:url-blank-lines": "bun run scripts/fix-url-blank-lines.ts --apply",
    "new-blog": "bun run scripts/create-blog-template.ts",
    "update-blog-icon": "bun run scripts/update-blog-icon.ts",
    "ci": "biome ci .",
    "clean": "rm -rf .next/ node_modules/",
    "analyze": "ANALYZE=true next build",
    "typecheck": "tsc --noEmit",
    "ai-check": "bun run typecheck && bun run check",
    "prepare": "husky",
    "kiri": "kiri --repo . --db .kiri/index.duckdb --watch"
  },
  "dependencies": {
    "@next/third-parties": "^16.0.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-breaks": "^4.0.0",
    "remark-github-blockquote-alert": "^2.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "unicode-emoji-json": "^0.8.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
