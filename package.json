{
  "name": "sui-tech-blog",
  "version": "0.1.0",
  "private": true,
  "author": "sui",
  "scripts": {
    "dev": "bun run --bun next dev",
    "build": "bun run --bun next build --profile",
    "postbuild": "pagefind --site .next --output-path public/pagefind",
    "preview": "bun run build && bun run start",
    "start": "next start",
    "lint": "biome lint .",
    "lint:ai": "set -o pipefail && biome lint . --reporter=github 2>&1 | { grep '^::' || true; }",
    "lint:fix": "biome lint --write .",
    "lint:unsage-fix": "biome lint --write --unsafe .",
    "textlint": "cd contents/ && bun run lint && cd ..",
    "textlint:fix": "cd contents/ && bun run lint:fix && cd ..",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "check:tags": "bun run scripts/check-tags.ts",
    "check:svg-security": "bun run scripts/check-svg-security.ts",
    "check:svg-security:all": "bun run scripts/check-svg-security.ts --all",
    "check:url-blank-lines": "bun run scripts/detect-url-without-blank-lines.ts",
    "fix:url-blank-lines": "bun run scripts/fix-url-blank-lines.ts --apply",
    "new-blog": "bun run scripts/create-blog-template.ts",
    "update-blog-icon": "bun run scripts/update-blog-icon.ts",
    "ci": "biome ci .",
    "clean": "rm -rf .next/ node_modules/",
    "analyze": "ANALYZE=true bun run --bun next build --webpack",
    "analyze:json": "ANALYZE=true ANALYZE_MODE=json ANALYZE_STATS=true bun run --bun next build --webpack",
    "type-check": "tsc --noEmit",
    "type-check:ai": "bunx tsc --noEmit --pretty false",
    "prepare": "husky",
    "kiri": "kiri --repo . --db .kiri/index.duckdb --watch",
    "lhci:healthcheck": "lhci healthcheck",
    "lhci:next": "bun run build && lhci collect --config=lighthouserc.json",
    "lhci:astro": "lhci collect --config=lighthouserc.json --startServerCommand='cd ../astro-blog && npm run preview' --url='http://localhost:4321/' --url='http://localhost:4321/blog/enforce-rules-with-stop-hooks-and-biome-v2'",
    "lhci:assert": "lhci assert --config=lighthouserc.json",
    "lhci:upload": "lhci upload --config=lighthouserc.json",
    "lhci:open": "lhci open"
  },
  "dependencies": {
    "@next/third-parties": "^16.0.10",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dompurify": "^3.3.1",
    "github-slugger": "^2.0.0",
    "gray-matter": "^4.0.3",
    "jsdom": "^27.3.0",
    "lucide-react": "^0.559.0",
    "mermaid": "^11.12.2",
    "next": "16.0.9",
    "next-themes": "^0.4.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-breaks": "^4.0.0",
    "remark-github-blockquote-alert": "^2.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "tailwind-merge": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "unicode-emoji-json": "^0.8.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^16.0.10",
    "@types/bun": "^1.3.4",
    "@types/dompurify": "^3.2.0",
    "@types/hast": "^3.0.4",
    "@types/jsdom": "^27.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/web": "^0.0.300",
    "autoprefixer": "^10.4.22",
    "depcheck": "^1.4.7",
    "husky": "^9.1.7",
    "pagefind": "^1.4.0",
    "postcss": "^8.5.6",
    "rehype-pretty-code": "^0.14.1",
    "remark-gfm": "^4.0.1",
    "tailwindcss": "^3.4.19",
    "typescript": "^5.9.3"
  }
}
