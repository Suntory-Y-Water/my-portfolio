{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "mcp__serena",
      "mcp__playwright",
      "mcp__context7",
      "mcp__deepwiki",
      "mcp__chrome-devtools",
      "mcp__kiri",
      "Bash(gh pr view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh run view:*)",
      "Bash(git log:*)",
      "Bash(gh run list:*)",
      "Bash(gh repo view:*)",
      "Bash(gh search issues:*)",
      "Bash(gh issue view:*)",
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(bash:*)",
      "Bash(pnpm run format:check:*)",
      "Bash(pnpm run lint:*)",
      "Bash(pnpm run check:*)",
      "Bash(pnpm run check:fix:*)",
      "Bash(pnpm run ai-check:*)",
      "Bash(pnpm run ci:*)",
      "Bash(find:*)",
      "Bash(pnpm add:*)",
      "Bash(pnpm run check:tags:*)",
      "Bash(bun:*)",
      "Bash(gh api:*)",
      "Bash(gh label list:*)",
      "Bash({} ;)",
      "Bash(gh issue list:*)",
      "Bash(for:*)",
      "Bash(do)",
      "Bash(sed:*)",
      "Bash(done)",
      "Bash(gh issue comment:*)",
      "Bash(xargs curl -s)",
      "WebFetch(domain:developers.cloudflare.com)",
      "WebSearch",
      "Bash(bunx biome:*)"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Read(.env.*)",
      "Read(.credentials.*)",
      "Read(id_rsa)",
      "Read(id_ed25519)",
      "Read(**/*token*)",
      "Read(**/*key*)",
      "Write(.env*)",
      "Write(**/secrets/**)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(bun add:*)",
      "Bash(bun remove:*)",
      "Bash(rm:*)",
      "WebFetch"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": ["context7", "serena"],
  "hooks": {
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/suggest-claude-md-hook.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/scripts/suggest-claude-md-hook.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node ~/.claude/scripts/statusline.js"
  }
}
