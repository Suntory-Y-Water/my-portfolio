{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": ["Read(*.md)", "Bash(bun run:*)"],
    "deny": ["Bash(rm -rf:*)", "Bash(sudo:*)", "Read(.env.*)", "Write(.env*)"],
    "ask": [
      "Bash(git push:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(bun add:*)",
      "Bash(bun remove:*)",
      "Bash(rm:*)",
      "WebFetch"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "node ~/.claude/scripts/statusline.js"
  },
  "disabledMcpjsonServers": ["serena"]
}
